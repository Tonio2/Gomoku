#:kivy 1.0.9

<MenuScreen>:
    size_hint: 1, 1
    MenuRootWidget:
        id: root_widget
        size: self.parent.size

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            size: self.parent.size
        
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10

                 # Board Size Controls
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Board Size Settings:'
                        font_size: '16sp'

                    BoxLayout:
                        orientation: 'horizontal'
                        
                        BoxLayout:
                            Label:
                                text: f'Board Width: {str(int(width_slider.value))}'
                            Slider:
                                id: width_slider
                                min: 10
                                max: 25
                                value: 19
                                on_value: root_widget.set_board_width(self.value)

                        BoxLayout:
                            Label:
                                text: f'Board Height: {str(int(height_slider.value))}'
                            Slider:
                                id: height_slider
                                min: 10
                                max: 25
                                value: 19
                                on_value: root_widget.set_board_height(self.value)

                # Game Mode Controls
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Game Mode:'
                        font_size: '16sp'
                    
                    BoxLayout:
                        ToggleButton:
                            text: 'Human vs AI'
                            group: 'mode'
                            state: 'down'
                            on_press: root_widget.set_mode(0)
                        ToggleButton:
                            text: 'Human vs Human'
                            group: 'mode'
                            state: 'normal'
                            on_press: root_widget.set_mode(1)

                # Rules Selection
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Game Rules:'
                        font_size: '16sp'
                    BoxLayout:
                        ToggleButton:
                            text: 'Standard'
                            group: 'rules'
                            state: 'down'
                        ToggleButton:
                            text: 'Pro'
                            group: 'rules'
                        ToggleButton:
                            text: 'Swap'
                            group: 'rules'
                        ToggleButton:
                            text: 'Swap2'
                            group: 'rules'

                # First Player Selection
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'First Player:'
                        font_size: '16sp'
                    BoxLayout:
                        ToggleButton:
                            text: 'Black'
                            group: 'first_player'
                            state: 'down'
                        ToggleButton:
                            text: 'White'
                            group: 'first_player'

                # Total Time Allowed Selection
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Total Time per Player:'
                        font_size: '16sp'
                    Spinner:
                        text: 'No limit'
                        values: ('2 min', '3 min', '4 min', '5 min', 'No limit')

                # Time Per Turn Selection
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Time Per Turn:'
                        font_size: '16sp'
                    Spinner:
                        text: 'No limit'
                        values: ('10 s', '20 s', '30 s', '40 s', 'No limit')

                # Start Game Button
                Button:
                    text: 'Start Game'
                    on_press: root.switch_to_game()

<GameScreen>:
    GameRootWidget:
        board_widget: game_board_widget
        infos_widget: game_infos_widget

        BoxLayout:
            id: root_box_layout
            orientation: 'horizontal' if self.width > self.height else 'vertical'

            size: root.size
            pos: root.pos

            Widget:
                size_hint: (0.75, 1) if root_box_layout.orientation == 'horizontal' else (1, 0.75)

                canvas.before:
                    Color:
                        rgba: 0.25, 0.15, 0.05, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                GameFrameWidget:
                    id: game_frame_widget

                    margin: 20
                    board_widget: game_board_widget

                GameBoardWidget:
                    id: game_board_widget

            BoxLayout:
                size_hint: (0.25, 1) if root_box_layout.orientation == 'horizontal' else (1, 0.25)
                orientation: 'horizontal' if self.width > self.height else 'vertical'

                Button:
                    text: 'Menu'
                    on_press: root.back_to_menu()
                    size_hint: None, None
                    size: 60, 50

                ScrollView:
                    do_scroll_x: False

                    GameMoveListWidget:
                        id: game_move_list_widget
                        grid_widget: grid_layout

                        GridLayout:
                            id: grid_layout
                            cols: 2
                            size_hint: None, None
                            size: game_move_list_widget.width, 0
                            spacing: dp(10)

                GameInfosWidget:
                    id: game_infos_widget

                    size_hint_x: 1 if root_box_layout.orientation == 'horizontal' else None
                    width: self.width if root_box_layout.orientation == 'horizontal' else 120

                    size_hint_y: None if root_box_layout.orientation == 'horizontal' else 1
                    height: 150 if root_box_layout.orientation == 'horizontal' else self.height

<GameInfosWidget>:

    time_marker_black: time_label_black
    time_marker_white: time_label_white

    score_marker_black: score_label_black
    score_marker_white: score_label_white

    button_previous: reverse_move_button
    button_next: reapply_move_button

    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size

        canvas.before:
            Color:
                rgba: 0, 0, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.3

            Button:
                id: reverse_move_button
                text: 'back'
                on_press: root.reverse_move()
                disabled: True

            Button:
                id: reapply_move_button
                text: 'forward'
                on_press: root.reapply_move()
                disabled: True

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.7

            RelativeLayout:
                size_hint_y: None

                GameInfosPlayerIndicatorWidget:
                    player: 1
                    size_hint_y: None
                    height: self.parent.height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Label:
                    id: time_label_black
                    text: "time p1"
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    color: 0.8, 0.8, 0.8, 1
                    font_name: 'resources/cascadia'

                Label:
                    id: score_label_black
                    text: "score p1"
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    color: 0.7, 0.0, 0.0, 1
                    bold: True

            RelativeLayout:
                size_hint_y: None

                GameInfosPlayerIndicatorWidget:
                    player: 2
                    size_hint_y: None
                    height: self.parent.height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Label:
                    id: time_label_white
                    text: "time p2"
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    color: 0.3, 0.3, 0.3, 1
                    font_name: 'resources/cascadia'

                Label:
                    id: score_label_white
                    text: "score p2"
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    color: 0.7, 0.0, 0.0, 1
                    bold: True
